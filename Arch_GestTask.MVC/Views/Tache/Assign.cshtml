@model Arch_GestTask.MVC.Models.Tache.AssignTaskForm

<h2>Choisissez une personne à assigner</h2>

<form asp-action="Assign">

	<select asp-for="@Model.PersonId" asp-items="@(new SelectList(Model.People, nameof(Arch_GestTask.MVC.Models.Personne.PersonDisplayForm.PersonId), nameof(Arch_GestTask.MVC.Models.Personne.PersonDisplayForm.Name)))">

		<option>Choisissez une personne</option>

